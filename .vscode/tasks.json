{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Start Services",
        "type": "shell",
        "command": "bash",
        "args": [
            "-lc",
            "docker-compose up -d && docker-compose ps"
        ],
        "problemMatcher": []
    },
    {
        "label": "Stop Services",
        "type": "shell",
        "command": "bash",
        "args": [
            "-lc",
            "docker-compose stop && docker-compose ps"
        ],
        "problemMatcher": []

    },
    {
        "label": "Remove and rebuild Services",
        "type": "shell",
        "command": "bash",
        "args": [
            "-lc",
            "docker-compose down && docker-compose up -d --build && docker-compose ps"
        ],
        "problemMatcher": []

    },
    {
        "label": "Show docker compose logs",
        "type": "shell",
        "command": "docker-compose logs -f",
        "problemMatcher": []

    },
    {
        "label": "Create python env",
        "type": "shell",
        "command": "python3 -m venv env",
        "problemMatcher": []
    },
    {
        "label": "Active python env",
        "type": "shell",
        "command": "source env/bin/activate",
        "problemMatcher": []
    },
    {
        "label": "Run python script",
        "type": "shell",
        "command": "python3 send_data.py",
        "problemMatcher": []
    },
    {
        "label": "Install python packages",
        "type": "shell",
        "command": "pip install -r requirements.txt",
        "problemMatcher": []
    }
  ]
}